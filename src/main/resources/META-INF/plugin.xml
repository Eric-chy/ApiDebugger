<idea-plugin>
    <id>me.fingerart.idea.apidebugger</id>
    <name>Api Debugger</name>
    <vendor email="george@chengguo.io" url="http://fingerart.me">FingerArt</vendor>
    <category>Network</category>

    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileTypeFactory implementation="io.chengguo.api.debugger.lang.psi.ApiFileTypeFactory"/>
        <!--        <fileEditorProvider implementation="io.chengguo.api.debugger.ui.preview.ApiFileViewEditorProvider"/>-->
        <lang.ast.factory language="Api" implementationClass="io.chengguo.api.debugger.lang.ApiASTFactory"/>
        <lang.syntaxHighlighterFactory language="Api"
                                       implementationClass="io.chengguo.api.debugger.lang.highlight.ApiSyntaxHighlighterFactory"/>
        <colorSettingsPage implementation="io.chengguo.api.debugger.lang.highlight.ApiColorSettingsPage"/>
        <additionalTextAttributes scheme="Default" file="colorSchemes/ApiDebuggerDefault.xml"/>
        <lang.formatter language="Api"
                        implementationClass="io.chengguo.api.debugger.lang.formatter.ApiFormattingModelBuilder"/>
        <lang.parserDefinition language="Api"
                               implementationClass="io.chengguo.api.debugger.lang.parser.ApiParserDefinition"/>
        <lang.foldingBuilder language="Api"
                             implementationClass="io.chengguo.api.debugger.lang.folding.ApiFoldingBuilder"/>
        <lang.psiStructureViewFactory language="Api"
                                      implementationClass="io.chengguo.api.debugger.lang.structure.ApiStructureViewFactory"/>
        <lang.commenter language="Api" implementationClass="io.chengguo.api.debugger.lang.ApiCommenter"/>
        <runLineMarkerContributor language="Api"
                                  implementationClass="io.chengguo.api.debugger.lang.run.ApiLineMarkerProvider"/>
        <completion.contributor language="Api"
                                implementationClass="io.chengguo.api.debugger.lang.completion.ApiCompletionContributor"/>
        <!--        <renameHandler implementation="io.chengguo.api.debugger.lang.refactoring.rename.ApiFromEditorRenameHandler"/>-->
<!--        <referencesSearch implementation="io.chengguo.api.debugger.lang.psi.impl.ApiSearcher"/>-->
        <inlineActionHandler implementation="io.chengguo.api.debugger.lang.refactoring.ApiInlineVariableActionHandler"/>
        <lang.refactoringSupport
                language="Api"
                implementationClass="io.chengguo.api.debugger.lang.refactoring.ApiRefactoringSupportProvider"/>
    </extensions>

    <actions>
        <action id="Api.Debugger.NewFile" class="io.chengguo.api.debugger.actions.NewApiDebuggerFileAction"
                text="Api Debugger" description="Create new Api Debugger file">
            <add-to-group group-id="NewGroup" anchor="last"/>
        </action>
    </actions>

    <project-components>
        <!--<component>
        <implementation-class>io.chengguo.api.debugger.engine.component.DebuggerComponent</implementation-class>
        </component>-->
    </project-components>

</idea-plugin>
